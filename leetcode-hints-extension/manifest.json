{
  "manifest_version": 3,
  "name": "LeetReminders",
  "version": "1.2.0",
  "description": "Enhance your LeetCode practice by adding personalized hint-like reminders to problems.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["utils.js", "api.js", "ui.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "LeetReminders"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "leetreminders@gmail.com",
      "strict_min_version": "109.0"
    }
  }
}
